generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  password  String?
  role  Role   @default(USER)
}

model Task {
  id        Int      @default(autoincrement()) @id
  title     String
  description   String?
  completed Boolean? @default(false)
}